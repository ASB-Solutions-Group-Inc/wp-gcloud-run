FROM debian:buster-slim

RUN apt-get update && apt-get install -y \
    php8.0 \
    apache2 \
    libjpeg-dev libpng-dev libwebp-dev \
    libzip-dev zlib1g-dev libfreetype6-dev supervisor zip \
    unzip software-properties-common -yy \
    && apt-get clean && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

RUN docker-php-ext-install zip \
    && docker-php-ext-install mysqli pdo pdo_mysql \
    && docker-php-ext-install exif \
    && docker-php-ext-configure gd --with-freetype --with-jpeg --with-webp \
    && docker-php-ext-install -j "$(nproc)" gd \
    && a2enmod rewrite

# RUN useradd -ms /bin/bash admin


COPY --chown=www-data:www-data ./app /var/www/html/

WORKDIR /var/www/html/app

RUN echo $_ACCESS_TOKEN > /var/www/html/app/service_account_conf.json

RUN ls -ld /var/www/html/app/wp-content/

RUN chown -R www-data:www-data /var/www/html/app/wp-content/

RUN chown -R www-data:www-data /var/www/html/app/wp-admin

RUN chown -R www-data:www-data /var/www/html/app/wp-admin/includes

RUN chown -R www-data:www-data /var/www/html/app/wp-include

RUN chown -R www-data:www-data /var/www/html/app/wp-content/plugins

RUN chown -R www-data:www-data /var/www/html/app/wp-content/upload

RUN chown -R www-data:www-data /var/www/html/app/wp-content/themes

RUN chown -R www-data:www-data /var/www/html/app/wp-includes

RUN chown -R www-data:www-data /var/www/html/app/

# Testing Start 
# Use tini to manage zombie processes and signal forwarding
# https://github.com/krallin/tini
ENTRYPOINT ["/usr/bin/tini", "--"]

# Pass the wrapper script as arguments to tini
CMD ["./gcsfuse_run.sh"]
#Testing END 